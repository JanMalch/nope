{
  "name": "nope",
  "version": "1.1.0",
  "description": "A single command that takes care of essentials packages.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint *.{js,jsx,ts,tsx}",
    "prettier": "\"npx prettier --write **/*.{ts,html,scss,json,js,json,md,yaml} --ignore-path .gitignore\"",
    "release": "npx standard-version",
    "postrelease": "git push --follow-tags origin master"
  },
  "keywords": [],
  "author": "JanMalch",
  "repository": {
    "type": "git",
    "url": "https://github.com/JanMalch/nope"
  },
  "bin": {
    "nope": "index.js"
  },
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "prettier": "^2.1.1",
    "standard-version": "^9.0.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --relative --concurrent=1",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
